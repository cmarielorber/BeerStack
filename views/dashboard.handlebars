<div class="container text-center">
  <div class="row g-2">
    <div class="col-xs-6">
      <form>
        <div class="p-3 bg-dark" style="border: 2px ridge var(--brew);">
          <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label" style="color:var(--brew)">Post Title:</label>
            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Beerstack Post Title" style="background-color: var(--brew); border: 2px ridge var(--brew)">
          </div>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label" style="color:var(--brew)">Your Beer Post:</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" style="background-color: var(--brew); border: 2px ridge var(--brew);" rows="8" placeholder="Add your thoughts to BEERSTACK..."></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Add to Beerstack</button>
      </form>
      </div>
    </div>
    <div class="col-6">
      <div>
        <div class="p-3 bg-dark" style="border: 2px ridge var(--brew);">
          <table class="table">
            <div>
              <h2 style="color: var(--brew);">Your Beerstack Posts</h2>
              <thead class="table-dark">
                <tr style="border: 1px solid var(--brew);">
                  <th scope="col" style="border: 1px solid var(--brew);">Date?</th>
                  <th scope="col" style="border: 1px solid var(--brew);">Title</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row" style="border: 1px solid var(--brew);">1</th>
                  <td style="border: 1px solid var(--brew);">Mark</td>
                </tr>
                
              </tbody>
            </div>
          </table>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div>
        <div class="p-3 bg-dark" style="border: 2px ridge var(--brew);">
          <table class="table">
            <div>
              <h2 style="color: var(--brew);">Your Cooler</h2>
              <thead class="table-dark">
                <tr style="border: 1px solid var(--brew);">
                  <th scope="col" style="border: 1px solid var(--brew);">Beer Name</th>
                  <th scope="col" style="border: 1px solid var(--brew);">Title</th>
                  <th scope="col" style="border: 1px solid var(--brew);">Likes</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row" style="border: 1px solid var(--brew);">1</th>
                  <td style="border: 1px solid var(--brew);">Mark</td>
                  <td style="border: 1px solid var(--brew);">Otto</td>
                  <td style="border: 1px solid var(--brew);">@mdo</td>
                </tr>
                
              </tbody>
            </div>
          </table>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="p-3 bg-dark" style="border: 2px ridge var(--brew);">
        <div>
          <div class="mb-3" style="border: 1px ridge var(--brew); padding: 25px">
            <label for="exampleFormControlInput1" class="fs-5 form-label" style="color:var(--brew); text-decoration:underline">So-Cal Brewery's</label>
            <p class="fs-1"style="color: var(--brew); text-decoration:underline">Bucket List</p>
            <p class="fs-6"style="color: var(--brew);">New Bucket List feature from So-Cal Brewery coming soon!</p>
          
        </div>
    </div>
</div>
  </div>
</div>











