<div
  style='background-color: var(--offbg); height: 50px; margin-bottom: 50px; margin-top: 20px; margin-right: 50px'
  ;
>
  <h1
    class='beerstackTitle'
    style='display: flex; justify-content:center; color: var(--brew);'
  >
    Welcome to Beerstack!
  </h1>
</div>

<div class='container text-center'>
  <div class='row g-2'>
    <div class='col-6'>
        <div class='p-3 bg-dark' style='border: 2px ridge var(--brew);'>
          <table class='table'>
            <div>
              <label
                for='exampleFormControlInput1'
                class='form-label'
                style='color:var(--brew);'
              >Recent Posts</label>
              <thead class='table-dark'>

                <tr style='border: 1px solid var(--brew);'>
                  <th
                    scope='col'
                    style='border: 1px solid var(--brew);'
                  >Title</th>
                  <th
                    scope='col'
                    style='border: 1px solid var(--brew);'
                  >Details</th>
                </tr>

              </thead>
              <tbody>
                {{#each posts}}
                  <tr style='border: 1px solid var(--brew);'>
                    <th
                      scope='col'
                      style='border: 1px solid var(--brew); color:white'
                    >{{title}}</th>
                    <th
                      scope='col'
                      style='border: 1px solid var(--brew); color:white'
                    > {{post_text}}</th>
                  </tr>
                {{/each}}
              </tbody>
            </div>
          </table>
          <div class='nav-itemmain'>
            <a class='nav-linkmain' href='/allpost'>View All Posts</a>
          </div>
        </div>
      </div>
      <div class='col-6'>
        <div>
          <div class='p-3 bg-dark' style='border: 2px ridge var(--brew);'>
            <table class='table'>
              <div>
                <label
                  for='exampleFormControlInput1'
                  class='form-label'
                  style='color:var(--brew);'
                >Beer List</label>
                <thead class='table-dark'>
                  <tr style='border: 1px solid var(--brew);'>
                    <th scope='col' style='border: 1px solid var(--brew);'>Beer
                      Name</th>
                    <th
                      scope='col'
                      style='border: 1px solid var(--brew);'
                    >Likes</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each beers}}
                    <tr>
                      <th
                        scope='row'
                        style='border: 1px solid var(--brew); color:white'
                      >{{name}}</th>
                      <td
                        style='border: 1px solid var(--brew); color:white'
                      >{{likes}}</td>
                    </tr>
                  {{/each}}

                </tbody>
              </div>
            </table>
            <div class='nav-itemmain'>
              <a class='nav-linkmain' href='/beerpost'>Brewclopedia</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

