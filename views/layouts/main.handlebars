<body class="bg-dark d-flex flex-column">
  <nav id="navBarid" class="navbar bg-dark fixed-top" style="background-color: #0000">
    <!-- left side nav bar w/ logo and title -->
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img id="logoimg rounded-circle" src="/images/So-CAL Logo.png" alt="SoCal Brew Logo" width="150"
          height="150" class="d-inline-block align-text-center rounded-circle" />So-Cal Brew Hopper
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
          aria-controls="offcanvasNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
      </a>
      <!-- bucket list side opened -->
      {{#if logged_in}}
      <aside class="offcanvas offcanvas-end bg-dark" tabindex="-1" id="offcanvasNavbar"
      aria-labelledby="offcanvasNavbarLabel">
      <!-- side bucketlist header -->
      <div class="offcanvas-header">
        <h5 class="offcanvas-title fs-3" id="offcanvasNavbarLabel">
          Brewery Bucket List
        </h5>
        <button type="button" id="bucketClose" class="btn-close" data-bs-dismiss="offcanvas"
          aria-label="Close"></button>
      </div>
      <!-- side bucket list body// Table for bucketlist -->
      <div class="container card col-sm-12 bg-dark">
        <img src="images/So-CAL Logo.png" class="card-img-top rounded-circle mt-3 mb-3"
          alt="SoCal Brew logo" />

        <div class="bucketContainer card-body rounded">
          <h5 class="card-title text-center">Your Bucketlist</h5>
          <p class="card-text"></p>
          <ol class="bucketStyle list-group list-group-flush" id="brew-list" style="overflow: auto; max-height: 40vh">
          </ol>
        </div>
      </div>
    </aside>
      {{else}}
      <a href="/login">login</a>
      {{/if}}
    </div>
  </nav>

  <main>

    {{{body}}}

    <footer>
      <section class="text-center about" style="
            text-decoration: none;
            color: #b79b67;
            padding-top: 16px;
            border-top: solid 2px var(--brew);
          ">
        <h1>About Us</h1>
        <div class="container">
          <div class="row">
            <div class="col-lg-4 col-sm-6 col-ex-12 about-item wow lightSpeedIn" data-wow-offset="200">
              <span class="fa-solid fa-people-group"></span>
              <h2 class="pt-3">The Team</h2>
              <p class="lead">Isaac Gonzalez</p>
              <p class="lead">Christen Lorber</p>
              <p class="lead">Louis Yoon</p>
            </div>
            <div class="col-lg-4 col-sm-6 col-ex-12 about-item wow lightSpeedIn" data-wow-offset="200">
              <span class="fa fa-info"></span>
              <h2 class="pt-3">The App</h2>
              <p class="lead">
                So-Cal Brew Hopper is an interactive tool that allows the User
                to search for desired breweries in the San Diego area and turn
                their destination into a custom User bucket list. This will
                allow the User to actively track which breweries they have yet
                to visit, as well as remove them once their visit is
                completed. If the User is looking to stay in for the night,
                the app provides a featured cocktail recipe.
              </p>
            </div>
            <div class="col-lg-4 col-sm-6 col-ex-12 about-item wow lightSpeedIn" data-wow-offset="200">
              <span class="fa fa-file"></span>
              <h2 class="pt-3">Resources</h2>
              <p class="lead">
                HTML, CSS, JavaScript, JQuery, Bootstrap, GitHub, Bootcamp
                Instructional Team
              </p>
            </div>
          </div>
        </div>
      </section>
    </footer>
  </main>

