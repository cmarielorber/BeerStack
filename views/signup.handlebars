<div class="card">
  <div class="card-header">
    <h2>BrewStaack Sign Up</h2>
  </div>
  <div id="signup" role="tabpanel">
    <form id="signup-form" class="card-body">
      <div>
        <label for="username-input-signup">Username</label>
        <input type="text" id="username-input-signup" />
      </div>
        <div>
        <label for="email-input-signup">Email</label>
        <input type="email" id="email-input-signup" />
      </div>
      <div>
        <label for="password-input-signup">Password</label>
        <input type="password" id="password-input-signup" />
      </div>
        <div>
        <label for="zipcode-input-signup">Zipcode</label>
        <input type="zipcode" id="zipcode-input-signup" />
      </div>
      <button type="submit" id="signup-btn" class="btn">BrewStack Approved!</button>
      <a href="/login">Already signed up? Login here.</a>
    </form>
  </div>
</div>

<script src="/js/signup.js"></script>